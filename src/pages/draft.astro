---
/**
 * FlashDraft - Draft Overview Page
 * 
 * Shows list of saved drafts and option to start new draft.
 */

import Layout from '../layouts/Layout.astro';
import { DraftDashboard } from '../components/DraftDashboard';
import { LayoutHeader } from '../components/LayoutHeader';
import { HeaderButton } from '../components/HeaderButton';
---

<Layout title="FlashDraft - Your Drafts">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
    <LayoutHeader 
      title="Your Drafts" 
      subtitle="View and manage your draft history"
    />
    
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <DraftDashboard client:load />
    </main>
  </div>
</Layout>
