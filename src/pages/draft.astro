---
/**
 * FlashDraft - Draft Overview Page
 * 
 * Shows list of saved drafts and option to start new draft.
 */

import Layout from '../layouts/Layout.astro';
import { DraftListPage } from '../frontend/components';
---

<Layout title="FlashDraft - Draft Overview">
  <DraftListPage 
    client:load 
    onNavigateHome={() => window.location.href = '/'}
    onNavigateToNewDraft={() => window.location.href = '/draft/new'}
    onNavigateToDraft={(draftId, round, pick) => {
      const path = round && pick 
        ? `/draft/${draftId}/p${round}p${pick}`
        : `/draft/${draftId}`;
      window.location.href = path;
    }}
  />
</Layout>