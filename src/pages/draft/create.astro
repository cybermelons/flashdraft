/**
 * FlashDraft - Create Draft Page
 * 
 * This page creates a new draft and redirects to p1p1.
 * It's designed to work with server-side redirects for instant draft creation.
 */

import { DraftEngine } from '../../lib/engine/DraftEngine';
import { LocalStorageAdapter } from '../../lib/engine/storage/LocalStorageAdapter';

// Get URL parameters
const url = new URL(Astro.request.url);
const seed = url.searchParams.get('seed') || Date.now().toString();
const setCode = url.searchParams.get('set');
const autostart = url.searchParams.get('autostart') === 'true';

// Validate set code
if (!setCode) {
  return Astro.redirect('/draft/new', 302);
}

// For SSR, we can't actually create the draft in localStorage here
// Instead, we'll pass the parameters to the client to create the draft
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Creating Draft...</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #0f172a;
      color: white;
      font-family: system-ui, -apple-system, sans-serif;
    }
    .loader {
      text-align: center;
    }
    .spinner {
      width: 40px;
      height: 40px;
      margin: 0 auto 20px;
      border: 3px solid rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      border-top-color: #3b82f6;
      animation: spin 1s ease-in-out infinite;
    }
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <div class="loader">
    <div class="spinner"></div>
    <p>Creating draft...</p>
  </div>

  <script define:vars={{ seed, setCode, autostart }}>
    // Create draft directly in client-side code without imports
    async function createAndStartDraft() {
      try {
        // Generate draft ID
        const draftId = `draft_${setCode}_${seed}`;
        
        // Create draft data structure
        const draft = {
          draftId,
          setCode,
          seed,
          status: 'active',
          currentRound: 1,
          currentPick: 1,
          playerCount: 8,
          humanPlayerIndex: 0,
          playerDecks: Array(8).fill(null).map(() => []),
          pickHistory: [],
          packs: [],
          createdAt: new Date().toISOString(),
          updatedAt: new Date().toISOString()
        };
        
        // Save to localStorage
        localStorage.setItem(`flashdraft_draft_${draftId}`, JSON.stringify(draft));
        
        // Also save to draft list
        const draftList = JSON.parse(localStorage.getItem('flashdraft_draftList') || '[]');
        if (!draftList.includes(draftId)) {
          draftList.unshift(draftId);
          localStorage.setItem('flashdraft_draftList', JSON.stringify(draftList));
        }
        
        // Navigate to p1p1 - the DraftInterface will handle pack generation
        window.location.href = `/draft/${draftId}/p1p1`;
      } catch (error) {
        console.error('Failed to create draft:', error);
        // Fallback to the draft creation page
        window.location.href = `/draft/new?set=${setCode}`;
      }
    }
    
    // Start the process immediately
    createAndStartDraft();
  </script>
</body>
</html>